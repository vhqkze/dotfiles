# vim:ft=gitconfig:
[core]
    quotepath = false
    filemode = true
    autocrlf = input
    pager = delta

[user]
    name = vhqkze
    email = zqz0601@gmail.com
    signingkey = 354FF77550DD5181AD078B3C96CE9659D695E45D

[commit]
    gpgsign = true

[init]
    defaultBranch = main

[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = -version:refname
[push]
    autoSetupRemote = true
    followTags = true
[help]
    autocorrect = prompt
[fetch]
    prune = true
    pruneTags = true
    all = true

[interactive]
    diffFilter = delta --color-only

[delta]
    side-by-side = true
    navigate = true    # use n and N to move between diff sections
	features = tokyonight-storm
    file-modified-label = "modified:"
    line-numbers = true
    line-numbers-left-format = " {nm:>} "
    line-numbers-right-format = " {np:>} "
    hunk-header-style = line-number syntax
    hyperlinks = true
    tabs = 4
    wrap-right-percent = 0.001
    wrap-max-lines = 99

[diff]
    tool = nvimdiff
    colorMoved = default
    algorithm = histogram
    renames = true
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"

# $LOCAL 是远程仓库里的文件，$REMOTE是本地文件

[merge]
    tool = nvimdiff
    conflictstyle = zdiff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "nvimdiff"]
    cmd = nvim -d "$MERGED" "$LOCAL" "$BASE" "$REMOTE" -c 'wincmd J'

[include]
    path = delta.gitconfig

[includeIf "gitdir:~/Developer/work/"]
    path = config_work

[alias]
    conflicts = diff --name-only --diff-filter=U


